@model IEnumerable<Client>
    @{ ViewData["Title"] = "Client form"; }

    <!-- Modal placeholder -->
    <div id="modal-placeholder"></div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-client" data-url="@Url.Action("Client")">
        Add client
    </button>

    <!-- Contacts table -->
    @await Html.PartialAsync("_Table", Model)
